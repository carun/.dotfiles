alias grc='grc --colour=on'
alias rm='rm -i'
alias ls='ls --color'
alias ll='ls -lrt'
alias pcpu='pss | head'
alias pmem='pss -s pmem | head'
alias pg='ps -ef | /bin/grep -v grep | /bin/grep'
alias grep='grep -n --color=auto --exclude-dir=\.git'
alias yum='sudo yum'
alias tmuxn='tmux -2 new -s'
alias tmuxa='tmux -2 at -t'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias pls='sudo'
alias mtop="top -u $USER"
alias tailf="tail -f"
alias k='kubectl'
alias gdb='gdb -q'
alias kmem='while :; do clear; k top pods -A | sort -hk4 | tail; sleep 2; done'
alias kcpu='while :; do clear; k top pods -A | sort -hk3 | tail; sleep 2; done'
alias dw='k delete deployments,services,rs,pods -l appType=extract; k delete deployments,services,rs,pods -l appType=search; k delete statefulsets,services,rs,pods -l appType=data'
alias kgp='k get pods'
alias ktx=kubectx
alias sg=sourcegit
